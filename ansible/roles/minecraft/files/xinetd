service minecraft
{
   type                = UNLISTED
   socket_type         = stream
   protocol            = tcp
   wait                = no
   user                = root
   server              = /usr/bin/minecraft.sh
   server_args         = 128M 1
   port                = 20020
   instances           = 1
}

