#!/bin/sh

set -x

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

#env
#uname -a
#ps aux
#ls -l $BUILD_DIR
#ls -l ansible
#ls -l ../ansible

PYPATH=$BUILD_DIR/.heroku/python/bin
find $BUILD_DIR -name "*ansible*"
find $BUILD_DIR -name "*site-packages*"
ls -l /tmp/build/.heroku/python/bin/ansible
echo "wtf"
#$PYPATH/ansible --version
su root chown root:root $(which sudo)
#pkexec chmod a=rx,u+ws
#su root chmod 4755 $(which sudo)

echo "import pty; pty.spawn('su root chown root:root $(which sudo)')" > /tmp/asdf.py
$BUILD_DIR/.heroku/python/bin/python /tmp/asdf.py
ls -l $(which sudo)

PYTHONPATH=$BUILD_DIR/.heroku/python/lib/python2.7/site-packages
$BUILD_DIR/.heroku/python/bin/python $PYPATH/ansible-playbook -vvvv -i $BUILD_DIR/ansible/local.ini $BUILD_DIR/ansible/local.yml
#du -h

echo $BUILD_DIR $CACHE_DIR $ENV_DIR

exit 0
